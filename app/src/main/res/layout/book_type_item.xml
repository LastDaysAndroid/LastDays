        <TextView
            android:id="@+id/book_type_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center|center_vertical"
            android:text="abcdefg" />


    </LinearLayout>

